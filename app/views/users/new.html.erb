<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <div class="row">
          <div class="col-sm-3">
        <%= f.label :name %>
            </div><div class="col-sm-4">
        <%= f.text_field :name %>
          </div>
</div><div class="row">
    <div class="col-sm-3">
        <%= f.label :email %>
    </div><div class="col-sm-4">
        <%= f.email_field :email %>
  </div>
</div><div class="row">
    <div class="col-sm-3">
        <%= f.label :password %>
    </div><div class="col-sm-4">
        <%= f.password_field :password %>
  </div>
</div><div class="row">
    <div class="col-sm-3">
        <%= f.label :password_confirmation, "Confirmation" %>
    </div><div class="col-sm-4">
        <%= f.password_field :password_confirmation %>
  </div>
</div>
        <br>
        <br>
        <div class="row">
        <%= f.submit "Create my account", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>